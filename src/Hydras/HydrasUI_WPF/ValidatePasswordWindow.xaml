<Window x:Class="HydrasUI_WPF.ValidatePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ValidatePasswordWindow" Height="132" Width="300">
    <StackPanel>
        <Label>请输入密码：</Label>
        <TextBox Width="153" Name="pwdTextBox"></TextBox>
        <WrapPanel Height="29">
            <Button Height="23" Width="49" Content="确认" Name="OKButton" Click="OKButton_Click"></Button>
            <Button Height="23" Width="49" Content="取消" Name="CancelButton" Click="CancelButton_Click"></Button>
        </WrapPanel>
    </StackPanel>
</Window>
