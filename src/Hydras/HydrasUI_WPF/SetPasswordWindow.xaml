<Window x:Class="HydrasUI_WPF.SetPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SetPasswordWindow" Height="169" Width="300">
    <StackPanel>
        <Label Content="设置密码"></Label>
        <WrapPanel>
            <Label Content="等级1密码"></Label>
            <TextBox Name="pwd1TextBox" Width="128"></TextBox>
        </WrapPanel>
        <WrapPanel>
            <Label Content="等级2密码"></Label>
            <TextBox Name="pwd2TextBox" Width="128"></TextBox>
        </WrapPanel>
        <WrapPanel>
            <Label Content="等级3密码"></Label>
            <TextBox Name="pwd3TextBox" Width="128"></TextBox>
        </WrapPanel>
        <WrapPanel>
            <Button Content="确定" Name="OKButton" Click="OKButton_Click"></Button>
            <Button Content="取消" Name="CancelButton" Click="CancelButton_Click"></Button>
        </WrapPanel>
    </StackPanel>
</Window>
